<section>
    <div class="container">
        <div class="row mt-5">
            <a href="/admin/add-user" class="btn btn-success ms-auto mb-3" style="width: 10rem;">Add User</a>
            <a href="/admin/add-admin" class="btn btn-success mb-3 ms-5" style="width:10rem ;">Add Admin</a>
        </div>
        <table class="table mt-5" id="userTable">
  <thead>
    <tr>
      <th scope="col">No</th>
      <th scope="col">Id</th>
      <th scope="col">Name</th>
      <th scope="col">Email</th>
      <th scope="col">Options</th>
    </tr>
  </thead>
  <tbody>
    {{#each users}}
    <tr>
      <td scope="row">{{@index}}</td>
      <td>{{this._id}}</td>
      <td>{{this.Name}}</td>
      <td>{{this.Email}}</td>
      <td>
        <a href="/admin/edit-user/{{this._id}}" class="btn btn-primary">Edit</a>
        <a href="/admin/delete-user/{{this._id}}" class="btn btn-danger" onclick="return confirm('Are you sure?');">Delete</a>
      </td>
      
    </tr>
    {{/each}}
   
  </tbody>
</table>
<div class="row mt-5">
            <a href="/admin/admin-logout" class="btn btn-secondary ms-auto" style="width:10rem ;">Logout</a>
        </div>
    </div>
</section>
<script>
    $(document).ready( function () {
        $('#userTable').DataTable();
} );
</script>
